#include <iostream>
#include <string>
using namespace std;

class Animal
{
	double AP;
	string name;
public:
	void setAP(double aAP = 0){
		AP = aAP;
	}
	void virtual attack(){
		cout << getName() << " - " << getAP() << "!" << endl;
	}
	double getAP(){
		return AP;
	}
	string & getName(){
		return name;
	}
};

class Dog : public Animal
{
public:
	Dog(double aAP){
		setAP(aAP);
		getName() = "Dog";
	}
	// void attack(){
	// 	cout << "Dog - " << getAP() << " !" << endl;
	// }
};

class BK : public Animal
{
public:
	BK(double aAP){
		setAP(aAP);
		getName() = "BK";
	}
	// void attack(){
	// 	cout << "BK - " << getAP() << " !" << endl;
	// }
};

int main(int argc, char const *argv[])
{
	BK bk(50);
	Dog dog(60);

	Animal * a1 = &bk;
	Animal * a2 = &dog;

	a1->attack();
	a2->attack();

	return 0;
}
